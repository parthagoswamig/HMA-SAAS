{
  "name": "windsurf",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:web dev:api",
    "dev:web": "npm --workspace web run dev",
    "dev:api": "npm --workspace api run start:dev",
    "build": "npm-run-all -p build:web build:api",
    "build:web": "npm --workspace web run build",
    "build:web-only": "npm install && npm --workspace web run build",
    "build:api": "npm --workspace api run build",
    "start": "npm-run-all -p start:web start:api",
    "start:web": "npm --workspace web run start",
    "start:api": "npm --workspace api run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "cross-env NODE_ENV=test jest --config=./jest.config.js",
    "lint": "npm-run-all -p lint:web lint:api",
    "lint:web": "npm --workspace web run lint || exit 0",
    "lint:api": "npm --workspace api run lint || exit 0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  }
}
