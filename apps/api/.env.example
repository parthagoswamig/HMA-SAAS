# ====================
# LOCAL DEVELOPMENT 
# ====================

# Server Configuration
NODE_ENV=development
PORT=3001

# Database - Local PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/hms_saas?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-chars
JWT_EXPIRES_IN=1d
JWT_ACCESS_SECRET=your-jwt-access-secret-key-here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here
JWT_REFRESH_EXPIRATION=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=10

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# File Uploads
MAX_FILE_SIZE=10485760 # 10MB
UPLOAD_PATH=./uploads

# Email (SMTP) - Optional for local dev
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-password
SMTP_FROM="HMS SaaS <noreply@example.com>"

# Frontend URLs
FRONTEND_URL=http://localhost:3000
RESET_PASSWORD_URL=http://localhost:3000/reset-password

# Redis (optional for local dev)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Sentry (error tracking) - Optional for local dev
SENTRY_DSN=

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# App Configuration
APP_NAME="HMS SaaS"
APP_VERSION=1.0.0
APP_URL=http://localhost:3001

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs

